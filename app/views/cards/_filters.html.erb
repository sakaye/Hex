<h4>Filters</h4>
<div class="btn-toolbar">
  <div id="colors" class="btn-group">
    <% @colors.each do |t| %>
      <button class="btn btn-small" rel="filter" data-color="<%= t.id %>"><%= t.name %></button>
    <% end %>
  </div>
</div>
<div class="btn-toolbar">
  <div id="types" class="btn-group">
    <% @types.each do |t| %>
      <% if t.name == "Quick Action" %>
        <button class="btn btn-small" rel="filter" data-type="<%= t.id %>">Quick</button>
      <% elsif t.name == "Basic Action" %>
        <button class="btn btn-small" rel="filter" data-type="<%= t.id %>">Basic</button>
      <% else %>
        <button class="btn btn-small" rel="filter" data-type="<%= t.id %>"><%= t.name %></button>
      <% end %>
    <% end %>
  </div>
</div>
<div class="btn-toolbar">
  <div id="rarities" class="btn-group">
    <% @rarities.each do |t| %>
      <button class="btn btn-small" rel="filter" data-rarity="<%= t.id %>"><%= t.name %></button>
    <% end %>
  </div>
</div>
<div class="btn-toolbar">
  <div id="factions" class="btn-group">
    <% @factions.each do |t| %>
      <button class="btn btn-small" rel="filter" data-faction="<%= t.id %>"><%= t.name %></button>
    <% end %>
  </div>
</div>
<div>
  <%= form_tag cards_path, method: 'get', class: "form-search" do %>
  <div class="input-append">
    <%= text_field_tag :search, params['search'], placeholder: "Search card name", class: "search-query" %>
    <%= submit_tag "Search", name: nil, class: "btn" %>
  </div>
  <% end %>
</div>