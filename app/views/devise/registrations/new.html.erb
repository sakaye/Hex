<h2>Sign up</h2>

<div class="row">
  <div class="span4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>

      <fieldset>
        <%= f.input :username, :required => false, :autofocus => true %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation, label: 'Confirmation' %>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-large' %>
        </div>
      </fieldset>
    <% end %>
  </div>

  <div class="span8">

  </div>
</div>